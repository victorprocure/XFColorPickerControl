<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DemoApp.Pages.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xfColorPickerControl="http://github.com/UdaraAlwis"
    ios:Page.UseSafeArea="true"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackLayout
            Grid.Row="0"
            Orientation="Vertical"
            VerticalOptions="Start">
            <Label
                Grid.Row="0"
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                Text="Welcome to Xamarin.Forms!" />
            <Label
                Grid.Row="1"
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                Text="Udara.Plugin.XFColorPickerControl Demo App" />
        </StackLayout>

        <Frame
            x:Name="SelectedColorDisplayFrame"
            Grid.Row="1"
            BackgroundColor="White"
            CornerRadius="0"
            HasShadow="True"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand">
            <StackLayout
                Orientation="Vertical"
                Spacing="15"
                VerticalOptions="Center">
                <Label
                    x:Name="SelectedColorValueLabel"
                    FontAttributes="Bold"
                    FontSize="Title"
                    HeightRequest="70"
                    HorizontalTextAlignment="Center"
                    Text="#COLOR"
                    TextColor="SlateGray"
                    VerticalTextAlignment="Center" />
                <xfColorPickerControl:ColorPicker
                    x:Name="ColorPicker"
                    ColorFlowDirection="Horizontal"
                    ColorSpectrumStyle="TintToHueToShadeStyle"
                    HeightRequest="200"
                    HorizontalOptions="FillAndExpand"
                    PickedColorChanged="ColorPicker_PickedColorChanged"
                    PointerRingBorderUnits="0.3"
                    PointerRingDiameterUnits="0.7"
                    PointerRingPositionXUnits="0.6"
                    PointerRingPositionYUnits="0.6">
                    <xfColorPickerControl:ColorPicker.BaseColorList>
                        <x:Array Type="{x:Type x:String}">
                            <!--  Red  -->
                            <x:String>#ff0000</x:String>
                            <!--  Yellow  -->
                            <x:String>#ffff00</x:String>
                            <!--  Green (Lime)  -->
                            <x:String>#00ff00</x:String>
                            <!--  Aqua  -->
                            <x:String>#00ffff</x:String>
                            <!--  Blue  -->
                            <x:String>#0000ff</x:String>
                            <!--  Fuchsia  -->
                            <x:String>#ff00ff</x:String>
                            <!--  Red  -->
                            <x:String>#ff0000</x:String>
                        </x:Array>
                    </xfColorPickerControl:ColorPicker.BaseColorList>
                </xfColorPickerControl:ColorPicker>
            </StackLayout>
        </Frame>

        <StackLayout Grid.Row="2" VerticalOptions="EndAndExpand">
            <Button
                x:Name="GoToBaseColorListDemoPage"
                BackgroundColor="DarkGray"
                Clicked="GoToBaseColorListDemoPage_Clicked"
                Text="BaseColorList"
                TextColor="White" />
            <Button
                x:Name="GoToColorFlowDirectionDemoPage"
                BackgroundColor="DarkGray"
                Clicked="GoToColorFlowDirectionDemoPage_Clicked"
                Text="ColorFlowDirection"
                TextColor="White" />
            <Button
                x:Name="GoToColorSpectrumStyleDemoPage"
                BackgroundColor="DarkGray"
                Clicked="GoToColorSpectrumStyleDemoPage_Clicked"
                Text="ColorSpectrumStyle"
                TextColor="White" />
            <Button
                x:Name="PointerRingStyleDemoPage"
                BackgroundColor="DarkGray"
                Clicked="GoToPointerRingStyle_Clicked"
                Text="PointerRingStyle"
                TextColor="White" />
        </StackLayout>

    </Grid>

</ContentPage>